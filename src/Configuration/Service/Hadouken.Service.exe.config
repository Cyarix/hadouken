<?xml version="1.0" encoding="utf-8" ?>

<configuration>
  <configSections>
    <section name="hdkn" type="Hadouken.Configuration.AppConfig.HadoukenConfigurationSection, Hadouken" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <hdkn instanceName="Hadouken" dataPath="%PROGRAMDATA%/Hadouken/Data">
    <http hostBinding="localhost" port="7890">
      <auth userName="" password=""/>
    </http>

    <rpc
      gatewayUri="net.pipe://localhost/hdkn.jsonrpc"
      pluginUriTemplate="net.pipe://localhost/hdkn.plugins.{0}" />

    <plugins baseDirectory="%PROGRAMDATA%/Hadouken/Plugins" repositoryUri="http://api.hdkn.net/">
    </plugins>
  </hdkn>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="file" xsi:type="File" fileName="${specialfolder:folder=CommonApplicationData}/Hadouken/Logs/${shortdate}.log" layout="${time} ${threadid} ${message} ${exception:format=tostring}" />
    </targets>

    <rules>
      <logger name="*" writeTo="file" />
    </rules>
  </nlog>

  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>
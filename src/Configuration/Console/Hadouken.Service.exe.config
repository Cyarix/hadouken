<?xml version="1.0" encoding="utf-8" ?>

<configuration>
  <configSections>
    <section name="hdkn" type="Hadouken.Configuration.ApplicationConfigurationSection, Hadouken" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <hdkn instanceName="Hadouken" dataPath="./Data">
    <http hostBinding="localhost" port="7890">
      <auth userName="" password=""/>
    </http>

    <rpc
      gatewayUri="net.pipe://localhost/hdkn.jsonrpc"
      pluginUri="net.pipe://localhost/hdkn.plugins.{0}" />

    <plugins baseDirectory="./Plugins">
    </plugins>
  </hdkn>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="file" xsi:type="File" fileName="${basedir}/Logs/${date}.log" layout="${time} ${threadid} ${message} ${exception:format=tostring}" />
    </targets>

    <rules>
      <logger name="*" writeTo="file" />
    </rules>
  </nlog>

  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>
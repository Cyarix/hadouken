{
  "manifest_version": 2,

  "id": "sample",
  "version": "1.0",

  "minimumHostVersion": "2.0",

  "ui": {
    "background": [
	  "js/controllers/settingsController.js",
	  "js/app.js"
	]
  },

  "dependencies":[
  ],

  "eventHandlers": {
    "custom.event": "sample.on.customEvent",
	"<all>": "sample.on.allEvents"
  },

  "permissions": {
	"dns": "<unrestricted>",
	"sockets": "<unrestricted>",
    "web": "<unrestricted>",
	"fileio": [
	  { "access": [ "read", "discover" ], "paths": [ "C:\\Temp" ] }
	]
  }
}